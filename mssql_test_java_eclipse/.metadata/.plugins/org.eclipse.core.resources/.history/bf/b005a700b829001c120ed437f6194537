import java.sql.SQLException;
import java.util.ArrayList;
import java.util.List;

import entity.Employee;
import repository.EmployeesRepo;

public class Appllication {

	private static EmployeesRepo employeeRepo;
	private static List<Employee> employees = new ArrayList<>();
	
	public static void main(String args[]) throws SQLException{
		employeeRepo.connectionWithQuery(1,2);//коннект к базе + запрос
		employees = employeeRepo.getEmployeesFromQuerySQL();// получение лист с данными из бд
		for(Employee employee: employees) {
			System.out.println(employee.toString());
		}
	}
}

